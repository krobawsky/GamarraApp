<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    android:focusable="true"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <LinearLayout
                android:id="@+id/foto_layout"
                android:background="@color/colorPrimary"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentStart="true"
                android:layout_marginEnd="16dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/foto_image"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    app:srcCompat="@drawable/img_item" />

            </LinearLayout>

            <TextView
                android:id="@+id/nombre_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/foto_layout"
                android:text="Nombre del producto"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/precio_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/nombre_text"
                android:layout_marginBottom="8dp"
                android:layout_toEndOf="@+id/foto_layout"
                android:text="S/. 200.00"
                android:textSize="14dp" />

            <ImageButton
                android:id="@+id/menu_button"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:background="@null"
                android:paddingEnd="8dp"
                android:paddingStart="8dp"
                app:srcCompat="@drawable/ic_menu_dots"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/sale"
            android:layout_width="54dp"
            android:layout_height="54dp"
            app:srcCompat="@drawable/img_sale"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>
