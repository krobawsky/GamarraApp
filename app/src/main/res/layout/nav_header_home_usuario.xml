<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@drawable/bg_material_design_3"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:weightSum="1">

    <!-- Imagen de perfil -->
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/perfil_image_size"
        android:layout_height="@dimen/perfil_image_size"
        android:scaleType="centerCrop"
        android:src="@drawable/img_hombre"
        app:civ_border_color="@color/colorPrimaryDark"
        app:civ_border_width="1dp" />

    <!-- Nombre de Usuario -->
    <TextView
        android:id="@+id/name"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        tools:text="Ricardo Daniel Berrospi Quispe"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <!-- Correo de la cuenta -->
    <TextView
        android:id="@+id/email"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="14dp"
        tools:text="ricardo.berrospi@tescup.edu.pe"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>


</LinearLayout>


