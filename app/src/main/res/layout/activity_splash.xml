<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="tecsup.integrador.gamarraapp.activity.SplashActivity"
android:orientation="vertical"
android:background="@drawable/copia">

    <LinearLayout
        android:id="@+id/a11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="1">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:layout_weight="0.20"
            android:background="@drawable/img_logog" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/a12"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/bg_personas"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:scaleType="fitXY"
                android:src="@drawable/img_colorbar_gruesito" />

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>
