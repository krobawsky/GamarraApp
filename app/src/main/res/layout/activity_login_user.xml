<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bgdesenfocado"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/a11"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="125dp"
                    android:layout_weight="0.20"
                    android:background="@drawable/img_logog" />

            </LinearLayout>


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/userLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="32dp"
                    app:hintEnabled="false">

                    <EditText
                        android:id="@+id/userTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/lightorange"
                        android:hint="@string/hint_email"
                        android:inputType="textPersonName"
                        android:shadowColor="@color/lightorange"
                        android:textColor="@color/lightorange"
                        android:textColorHighlight="@color/lightorange"
                        android:textColorHint="@color/lightorange"
                        android:textColorLink="@color/lightorange" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/passLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/userLayout"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="16dp"
                    app:hintEnabled="false"
                    app:passwordToggleEnabled="true"
                    app:passwordToggleTint="@color/colorPrimaryDark">

                    <EditText
                        android:id="@+id/passTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/lightorange"
                        android:hint="@string/hint_password"
                        android:inputType="textPassword"
                        android:textColor="@color/lightorange"
                        android:textColorHint="@color/lightorange" />

                </android.support.design.widget.TextInputLayout>

                <Button
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/passLayout"
                    android:layout_alignStart="@+id/passLayout"
                    android:layout_below="@+id/passLayout"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/borde_redondo_fondo"
                    android:text="@string/btn_login"
                    android:textColor="@color/lightorange" />

                <!-- Link to Login Screen -->

                <Button
                    android:id="@+id/btnLink"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/btnLogin"
                    android:layout_marginTop="60dp"
                    android:background="@null"
                    android:text="@string/btn_link_to_register"
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/btnLink"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_colorbar_gruesito" />


            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>